# editorconfig.org
root = true

[*]
end_of_line = lf
charset = utf-8
insert_final_newline = true
max_line_length = 80
trim_trailing_whitespace = true

[*.{js,json,yml}]
indent_style = space
indent_size = 2

[*.json]
max_line_length = 9007199254740991 # Number.MAX_SAFE_INTEGER

[*.md]
max_line_length = 9007199254740991 # Number.MAX_SAFE_INTEGER
